<!DOCTYPE html>
<html>
<head>
  <title>A Place For Your Ideas</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>

<body>
  <div>
    <% if current_user %>
    <%= link_to "Logout", logout_path, method: :delete %>
    <% else %>
    <%= link_to "Login", login_path %>
    <% end %>
    <% if current_user %>
      <h3><%= current_user.username %>'s account</h3>
      <% end %>
  </div>
  <%= yield %>
</body>
</html>
